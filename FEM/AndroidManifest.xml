<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault" >
        <activity
            android:name=".ModelActivity"
            android:label="@string/title_activity_element" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ModelList"
            android:label="@string/title_activity_set_property" >
        </activity>
        <activity
            android:name=".MaterialList"
            android:label="@string/title_activity_create_element" >
        </activity>
        <activity
            android:name=".ElementList"
            android:label="@string/title_modello_list" >
        </activity>
        <activity
            android:name=".ProfileList"
            android:label="@string/title_modello_detail" >
        </activity>
        <activity
            android:name=".AddElement"
            android:label="@string/title_activity_add_element" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fem.ModelActivity" />
        </activity>
        <activity
            android:name=".AddProfile"
            android:label="@string/title_activity_add_profile" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fem.ModelActivity" />
        </activity>
        <activity
            android:name=".AddMaterial"
            android:label="@string/title_activity_add_material" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fem.ModelActivity" />
        </activity>
        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_item_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ItemListActivity" />
        </activity>
    </application>

</manifest>