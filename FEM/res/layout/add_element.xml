<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/elemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <requestFocus />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Coordinate degli estremi" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="9"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:text="X1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editX1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:ems="10"
                        android:inputType="numberDecimal" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:layout_column="2"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:text="Y1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editY1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:id="@+id/editX2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="right"
                        android:layout_row="1"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_column="0"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:text="X2"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:layout_column="2"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:text="Y2"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editY2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_column="4"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:text="Z2"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editZ2"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="left"
                        android:layout_row="1"
                        android:ems="10"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_column="4"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:text="Z1"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <EditText
                        android:id="@+id/editZ1"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="left"
                        android:layout_row="0"
                        android:ems="10"
                        android:inputType="numberDecimal" />
                </GridLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profilo"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.67" />

                    <ImageButton
                        android:id="@+id/elemAddProfile"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/add_item" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materiale"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/elemAddMaterial"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/add_item" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>